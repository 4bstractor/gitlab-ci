%form.form-horizontal{ action: project_path(@project), method: 'post' }
  .control-group
    %label{for: 'name'} Name
    %input{type: 'text', name: 'name', class: 'input-xxlarge', value: @project.name}
  .control-group
    %label{for: 'path'} Path
    %input{type: 'text', name: 'path', class: 'input-xxlarge', value: @project.path}
  .control-group
    %label{for: 'scripts'} Scripts
    %textarea{name: 'scripts', class: 'input-xxlarge', value: @project.scripts}

  %hr
  %input.btn{type: 'submit', value: 'Save'}
